# 数据库配置
DATABASE_URL=sqlite:///./data.db

# OCR配置
PADDLE_OCR_LANG=ch
# OCR_MODEL_DIR=./ocr_model  # 默认为项目根目录下的 ocr_model/，自定义时取消注释

# 模拟器配置
MUMU_MANAGER_PATH=/path/to/MuMuManager.exe
ADB_PATH=adb
PKG_NAME=com.netease.onmyoji
LAUNCH_MODE=adb
IPC_DLL_PATH=
NEMU_FOLDER=
ACTIVITY_NAME=.MainActivity

# 识图缓存配置
# VISION_FRAME_CACHE_ENABLED=true
# VISION_FRAME_CACHE_TTL_MS=5000
# VISION_FRAME_SIMILARITY_THRESHOLD=0.8
# VISION_CROSS_EMULATOR_CACHE_ENABLED=false
# VISION_CROSS_EMULATOR_SHARED_BUCKET_SIZE=8

# 调度配置
COOP_TIMES=18:00,21:00
STAMINA_THRESHOLD=1000
DELEGATE_TIME=18:00

# Web服务配置
API_HOST=0.0.0.0
API_PORT=9001
RUN_MODE=local
CLOUD_API_BASE_URL=
CLOUD_AGENT_NODE_ID=local-node
CLOUD_MANAGER_USERNAME=
CLOUD_MANAGER_PASSWORD=
CLOUD_POLL_INTERVAL_SEC=5
CLOUD_LEASE_SEC=90
CLOUD_TIMEOUT_SEC=15

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=./logs
LOG_RETENTION_DAYS=3
LOG_CONSOLE_ENABLED=true
LOG_ENQUEUE_ENABLED=true
LOG_FILE_FORMAT=text
LOG_ACCESS_ENABLED=true
# LOG_ACCESS_PATH=./logs/access_{time:YYYY-MM-DD}.log
LOG_ROTATION=00:00

# 备份配置
BACKUP_INTERVAL_DAYS=3
BACKUP_RETENTION_COUNT=3

# 并发优化（多模拟器场景）
# IO_THREAD_POOL_SIZE=16    # ADB I/O 线程池大小（默认 16，建议 >= 模拟器数 × 1.5）
# COMPUTE_THREAD_POOL_SIZE=8 # 计算线程池大小（默认 8，模板匹配/OCR 用）
